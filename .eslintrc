{ 
  "extends": "airbnb",
  "rules": {
    "comma-dangle": ["error", {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore",
    }]
  },
  "globals": {
    "window": true,
    "NODE_ENV": true,
    "__REDUX_DEVTOOLS_EXTENSION__": true
  },
  "env": {
    "browser": true,
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  }
}